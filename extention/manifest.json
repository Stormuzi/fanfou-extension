{
	"name": "饭否推荐",
	"version": "1.0",
	"description": "针对饭否社交网络的浏览器插件",
	"permissions": [
		"contextMenus", "webRequest","tabs","http://fanfou.com/*","http://www.fanfou.com/*",
		"http://localhost/*"
	],
	"background": { "scripts": ["js/background.js"] },
	"browser_action": {
		"name": "饭否推荐",
		"default_popup" : "popup.html",
		"default_title":"饭否推荐(v1.0)"
	},
	"icons": {
		"16":"img/get_started16.png"
	},
	"manifest_version": 2,
	"content_scripts": [{
		"matches": ["http://e.fanfou.com/*","http://fanfou.com/*"],
		"css": ["css/app.css"],
		"js": ["js/jquery-1.7.2.min.js","js/jquery.scrollintoview.js","js/weiboADBlock.js"]
	}]
	
}